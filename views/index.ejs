
<%- include('header') %>
<style>
    form {
        padding-bottom: 50px;
        margin: auto;
        width: 50%;
    }

    form input[type='text'] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 70%;
        margin: auto;
        background: #f1fff1;
    }

    form button {
        width: 20%;
        padding: 10px;
        background: #eeba16;
        color: white;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
        float: letf;
        font-size: 17px;
    }

    img {
        position: relative;
    }
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: 0.5s ease;
        background-color: #f79071;
    }

    .overlay:hover {
        opacity: 0.9;
    }

    .text {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    * {
        box-sizing: border-box;
    }

    /* Style the search field */
    form.search input[type=text] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 80%;
        background: #f1f1f1;
    }

    /* Style the submit button */
    form.search button {
        float: left;
        width: 100%;
        padding: 10px;
        background: #eeba16;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none; /* Prevent double borders */
        cursor: pointer;
    }

    form.search button:hover {
        background: #eeba16;
    }

    /* Clear floats */
    form.search::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
<div class="container">
    <h2>LOGO</h2>
    <form action="/" method="GET">
        <form class="search">
            <input type="text" placeholder="Search" name="search">
            <button type="submit"><img src="action_page.png"></button>
        </form>
    </form>
</div>
<%- include('footer') %>